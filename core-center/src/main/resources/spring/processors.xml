<?xml version="1.0" encoding="UTF-8"?>
<beans
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.springframework.org/schema/beans"
        xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    <import resource="beans.xml"/>

    <bean id="taskExecutor"
          class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
        <property name="corePoolSize" value="3"/>
        <property name="keepAliveSeconds" value="200"/>
        <property name="maxPoolSize" value="5"/>
        <property name="queueCapacity" value="25"/>
    </bean>

    <bean id="tasks" class="gamecenter.core.beans.Tasks">
        <property name="normalTask">
            <list>
                <bean id="appLoader" class="gamecenter.core.processors.tasks.AppLoader">
                    <constructor-arg name="profileManager" ref="profileManager"/>
                </bean>
                <bean id="tokenManager" class="gamecenter.core.processors.tasks.WechatTokenManager">
                    <constructor-arg name="profileManager" ref="profileManager"/>
                </bean>
                <ref bean="connectionManager"/>
                <!--<bean id="cloudServerLoader" class="gamecenter.core.processors.tasks.CloudServerLoader"/>-->
            </list>
        </property>
        <property name="scheduledTasks">
            <list>
                <bean id="reportGenerator" class="gamecenter.core.processors.tasks.ReportGenerator">
                    <constructor-arg name="dbServices" ref="dbServices"/>
                    <constructor-arg name="broadcastService" ref="broadcastService"/>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="connectionManager" class="gamecenter.core.processors.tasks.ConnectionManager">
        <constructor-arg name="dbServices" ref="dbServices"/>
        <constructor-arg name="cloudServerService" ref="cloudServerServices"/>
        <constructor-arg name="broadcastService" ref="broadcastService"/>
    </bean>

    <bean id="accessRouterProcessor" class="gamecenter.core.processors.AccessRouterProcessor"/>

    <bean id="demoActionClass" class="gamecenter.core.processors.DemoAction">
        <property name="profileManager" ref="profileManager"/>
    </bean>

    <bean id="wechatOAuthProcessor" class="gamecenter.core.processors.wechat.WechatOAuthProcessor">
        <property name="profileManager" ref="profileManager"/>
    </bean>

    <bean id="webLoginProcessor" class="gamecenter.core.processors.web.WebLoginProcessor">
        <property name="userProfile" ref="userProfile"/>
    </bean>

    <bean id="wechatLoginProcessor" class="gamecenter.core.processors.wechat.WechatLoginProcessor">
        <constructor-arg name="userService" ref="userService"/>
        <constructor-arg name="subscribeService" ref="subscribeService"/>
        <constructor-arg name="profileManager" ref="profileManager"/>
        <constructor-arg name="userProfile" ref="userProfile"/>
    </bean>

    <bean id="wechatTryPlayProcessor" class="gamecenter.core.processors.wechat.WechatTryPlayProcessor">
        <constructor-arg name="userProfile" ref="userProfile"/>
        <constructor-arg name="dbServices" ref="dbServices"/>
        <constructor-arg name="broadcastService" ref="broadcastService"/>
    </bean>

    <bean id="wechatScanProcessor" class="gamecenter.core.processors.wechat.WechatScanProcessor">
        <constructor-arg name="wechatJsConfigService" ref="wechatJsConfigService"/>
        <constructor-arg name="userProfile" ref="userProfile"/>
        <constructor-arg name="profileManager" ref="profileManager"/>
    </bean>

    <bean id="wechatMessageProcessor" class="gamecenter.core.processors.wechat.WechatMessageProcessor">
        <constructor-arg name="handlers">
            <list>
                <ref bean="subscribeMessageHandler"/>
                <ref bean="checkBalanceMessageHandler"/>
                <ref bean="contactUsMessageHandler"/>
                <ref bean="connectionStatusMessageHandler"/>
                <ref bean="topUpMessageHandler"/>
            </list>
        </constructor-arg>
    </bean>

    <bean id="welcomeProcessor" class="gamecenter.core.processors.WelcomeProcessor">
        <constructor-arg name="userProfile" ref="userProfile"/>
    </bean>

    <bean id="pocketProcessor" class="gamecenter.core.processors.PocketProcessor">
        <constructor-arg name="userProfile" ref="userProfile"/>
        <constructor-arg name="dbServices" ref="dbServices"/>
        <constructor-arg name="wechatJsConfigService" ref="wechatJsConfigService"/>
    </bean>

    <bean id="wechatPayNotificationProcessor" class="gamecenter.core.processors.wechat.WechatPayNotificationProcessor">
        <constructor-arg name="profileManager" ref="profileManager"/>
    </bean>

    <bean id="wechatPayOrderProcessor" class="gamecenter.core.processors.wechat.WechatPayOrderProcessor">
        <constructor-arg name="profileManager" ref="profileManager"/>
        <constructor-arg name="userProfile" ref="userProfile"/>
        <constructor-arg name="globalPaymentBean" ref="globalPaymentBean"/>
    </bean>

    <bean id="credentialProcessor" class="gamecenter.core.processors.CredentialProcessor">
        <constructor-arg name="profileManager" ref="profileManager"/>
    </bean>

    <bean id="jsonProcessor" class="gamecenter.core.processors.JsonProcessor">
        <constructor-arg name="userProfile" ref="userProfile"/>
        <constructor-arg name="dbServices" ref="dbServices"/>
    </bean>

    <bean id="paidNotifyProcessor" class="gamecenter.core.processors.wechat.PaidNotificationResponseHandler">
        <constructor-arg name="profileManager" ref="profileManager"/>
        <constructor-arg name="globalPaymentBean" ref="globalPaymentBean"/>
        <constructor-arg name="dbServices" ref="dbServices"/>
        <constructor-arg name="cloudServerService" ref="cloudServerServices"/>
    </bean>

    <bean id="prePayOrderProcessor" class="gamecenter.core.processors.wechat.NativePrePayProcessor">
        <constructor-arg name="profileManager" ref="profileManager"/>
    </bean>

    <bean id="topupProcessor" class="gamecenter.core.processors.wechat.WechatTopupProcessor">
        <constructor-arg name="userProfile" ref="userProfile"/>
        <constructor-arg name="dbServices" ref="dbServices"/>
        <constructor-arg name="cloudServerService" ref="cloudServerServices"/>
        <constructor-arg name="broadcastService" ref="broadcastService"/>
    </bean>

    <bean id="deviceRegistryProcessor" class="gamecenter.core.processors.devices.DeviceRegistryProcessor">

    </bean>

    <!-- Intercepters -->
    <bean id="accessControl" class="gamecenter.core.intercepters.AccessControlIntercepter">
        <property name="userProfile" ref="userProfile"/>
    </bean>

    <!-- Task runner -->
    <bean id="cloudServer" class="gamecenter.core.processors.tasks.CloudServerLoader"/>

    <!-- Wechat Message Handler -->
    <bean id="subscribeMessageHandler" class="gamecenter.core.processors.wechat.messages.SubscribeMessageHandler">
        <constructor-arg name="msgTypeFilter" ref="eventFilter"/>
        <constructor-arg name="eventTypeFilter" ref="subscribeEventFilter"/>
        <constructor-arg name="keyFilter" value="alwaysStringPassFilter"/>
        <constructor-arg name="subscribeService" ref="subscribeService"/>
        <constructor-arg name="profileManager" ref="profileManager"/>
    </bean>

    <bean id="checkBalanceMessageHandler" class="gamecenter.core.processors.wechat.messages.CheekBalanceMessageHandler">
        <constructor-arg name="msgTypeFilter" ref="eventFilter"/>
        <constructor-arg name="eventTypeFilter" ref="clickEventFilter"/>
        <constructor-arg name="keyFilter" ref="checkBalanceEventFilter"/>
        <constructor-arg name="customerService" ref="customerService"/>
        <constructor-arg name="profileManager" ref="profileManager"/>
        <constructor-arg name="broadcastService" ref="broadcastService"/>
    </bean>

    <bean id="connectionStatusMessageHandler" class="gamecenter.core.processors.wechat.messages.ConnectionStatusMessageHandler">
        <constructor-arg name="msgTypeFilter" ref="textFilter"/>
        <constructor-arg name="eventTypeFilter" ref="clickEventFilter"/>
        <constructor-arg name="keyFilter" ref="checkConnectionFilter"/>
        <constructor-arg name="profileManager" ref="profileManager"/>
        <constructor-arg name="dbServices" ref="dbServices"/>
        <constructor-arg name="connectionManager" ref="connectionManager"/>
    </bean>

    <bean id="contactUsMessageHandler" class="gamecenter.core.processors.wechat.messages.ContactUsMessageHandler">
        <constructor-arg name="msgTypeFilter" ref="eventFilter"/>
        <constructor-arg name="eventTypeFilter" ref="clickEventFilter"/>
        <constructor-arg name="keyFilter" ref="contactUsEventFilter"/>
        <constructor-arg name="profileManager" ref="profileManager"/>
    </bean>

    <bean id="topUpMessageHandler" class="gamecenter.core.processors.wechat.messages.TopupMessageHandler">
        <constructor-arg name="msgTypeFilter" ref="textFilter"/>
        <constructor-arg name="eventTypeFilter" ref="clickEventFilter"/>
        <constructor-arg name="keyFilter" ref="coinsFilter"/>
        <constructor-arg name="profileManager" ref="profileManager"/>
        <constructor-arg name="dbServices" ref="dbServices"/>
        <constructor-arg name="cloudServerService" ref="cloudServerServices"/>
    </bean>

    <bean id="eventFilter" class="gamecenter.core.processors.StringIncludedFilter" scope="singleton">
        <constructor-arg name="expect" value="event"/>
    </bean>

    <bean id="textFilter" class="gamecenter.core.processors.StringIncludedFilter" scope="singleton">
        <constructor-arg name="expect" value="text"/>
    </bean>

    <bean id="subscribeEventFilter" class="gamecenter.core.processors.StringIncludedFilter" scope="singleton">
        <constructor-arg name="expect" value="subscribe"/>
    </bean>

    <bean id="clickEventFilter" class="gamecenter.core.processors.StringIncludedFilter" scope="singleton">
        <constructor-arg name="expect" value="CLICK"/>
    </bean>

    <bean id="checkBalanceEventFilter" class="gamecenter.core.processors.StringIncludedFilter" scope="singleton">
        <constructor-arg name="expect" value="account_balance"/>
    </bean>

    <bean id="checkConnectionFilter" class="gamecenter.core.processors.StringIncludedFilter" scope="singleton">
        <constructor-arg name="expect" value="status"/>
    </bean>

    <bean id="topUpFilter" class="gamecenter.core.processors.StringIncludedFilter" scope="singleton">
        <constructor-arg name="expect" value="t1"/>
    </bean>

    <bean id="accountBalanceEventFilter" class="gamecenter.core.processors.StringIncludedFilter" scope="singleton">
        <constructor-arg name="expect" value="account_balance"/>
    </bean>

    <bean id="contactUsEventFilter" class="gamecenter.core.processors.StringIncludedFilter" scope="singleton">
        <constructor-arg name="expect" value="contact_us"/>
    </bean>
    <bean id="coinsFilter" class="gamecenter.core.processors.RegexIncludeFilter" scope="singleton">
        <constructor-arg name="regex" value="^[t][\d]{1,3}"/>
    </bean>
</beans>